@{
    ViewBag.title = "ImageUpload";
}
<!-- Upload Section -->
<section class="upload-page">
    <div class="upload-form">
        <h1>Share Your Creativity</h1>
        <p>Use the form below to submit your creative writing piece.</p>
        <!-- Message Display -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger" role="alert">
                @Model.Message
            </div>
            <script>
        Swal.fire({
            icon: `@Model.Message1`,
            title: `@Model.Message`,
        });
            </script>
        }
    <form method="post" id="quillForm">
        <!-- Title -->
        <label for="title">Title</label>
        <input type="text" placeholder="Image Title" id="imgTitle" name="imgTitle" asp-for="imgTitle" required />

        <!-- ImageLink -->
        <label for="title">Image Link</label>
        <input type="text" placeholder="Image Link" id="imglink" name="imglink" asp-for="imgLink" required />

        <!-- Student Name -->
        <label for="student-name">Student Name</label>
        <input type="text" placeholder="Student Name" id="student-name" name="StudentName" asp-for="StudentName" required />

        <!-- Student Code -->
        <label for="student-code-repeat">Student Code </label>
        <input type="text" placeholder="Student Code" id="student-code" name="StudentCode" asp-for="StudentCode" required />

        <br>
        <button type="submit" class="btn">Upload</button>
    </form>
    </div>
</section>
